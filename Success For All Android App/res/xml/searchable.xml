<searchable xmlns:android="http://schemas.android.com/apk/res/android"
    android:label="@string/search"
    android:hint="@string/search"
    android:searchMode="queryRewriteFromData"
    android:searchButtonText="@string/search"
    android:inputType="text"
    android:imeOptions="actionSearch"
    android:searchSuggestAuthority="content_authority"
    android:searchSuggestPath="/search_suggest_path"
    android:searchSuggestSelection="selection"
    android:searchSuggestIntentAction="action"
    android:searchSuggestIntentData="data"
    android:searchSuggestThreshold="1"
    android:includeInGlobalSearch="true"
    android:searchSettingsDescription="Search Settings"
    android:queryAfterZeroResults="true"
    android:voiceSearchMode="showVoiceSearchButton"
    android:voiceLanguageModel="free-form"
    android:voicePromptText="VoiceText"
    android:voiceLanguage="en-US"
    android:voiceMaxResults="1">

    <actionkey
        android:queryActionMsg="string"
        android:suggestActionMsg="string"
        android:suggestActionMsgColumn="string" />
</searchable>
